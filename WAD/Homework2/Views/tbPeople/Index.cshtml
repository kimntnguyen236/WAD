@model IEnumerable<Homework2.Models.tbPeople>
@{
    ViewData["Title"] = "Index";
    int count = 1;
}
<h1>Hello, @ViewBag.user</h1>
<table class="table">
    <tr>
        <th>No.</th>
        <th>Name</th>
        <th>Balance ($)</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@(count++)</td>
            <td>@item.Username</td>
            <td>@item.Balance</td>
        </tr>
    }
</table>
<br />
<div>
    @Html.ActionLink("Back to list", "Menu", "tbPeople")
</div>